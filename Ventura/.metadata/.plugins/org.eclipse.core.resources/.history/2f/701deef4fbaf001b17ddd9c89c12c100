package ventana;

import java.awt.GridBagConstraints;
import java.awt.Insets;

import javax.swing.*;


public class PaginaPrincipal extends JPanel {
	
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	public void paginaPrincipal(JPanel j) {
		
		GridBagConstraints c = new GridBagConstraints();
		
		c.fill = GridBagConstraints.BOTH;
	    c.insets = new Insets(1, 2, 1, 2);
	    
	    c.gridx = 0;
	    c.gridy = 0;
	    c.gridheight = 1;
	    c.gridwidth = 1;
		j.add(new JButton("Correo"), c);
		
		c.gridx = 1;
	    c.gridy = 0;
	    c.gridheight = 1;
	    c.gridwidth = 1;
        j.add(new JButton("Moodle"));
        
        c.gridx = 0;
	    c.gridy = 1;
	    c.gridheight = 1;
	    c.gridwidth = 2;
        j.add(new JButton("Calendario"));
        
        c.gridx = 2;
	    c.gridy = 0;
	    c.gridheight = 2;
	    c.gridwidth = 1;
        j.add(new JButton("Sigma"));
	}
}
